{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "declaration": true,
        "downlevelIteration": true,
        "module": "esnext",
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
    },
    "include": [
        "src"
    ]
}