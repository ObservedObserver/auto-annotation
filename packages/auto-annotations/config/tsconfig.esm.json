{
    "compilerOptions": {
        "outDir": "../build/esm",
        "target": "ES5",
        "lib": [
            "ESNext",
        ],
        "moduleResolution": "node",
        "declaration": true,
        "downlevelIteration": true,
        "module": "ESNext",
        "allowJs": false,
        "strict": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "../src/**/*"
    ]
}